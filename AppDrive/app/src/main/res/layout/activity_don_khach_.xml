<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonKhach_Activity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/colorGray_31">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LẤY HÀNG"
            android:textSize="30sp"
            android:textColor="@color/colorLightSlateBlue"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tên cửa hàng"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/colorGray_31">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:text="@string/diem_Don"
                android:gravity="center"
                android:textSize="23sp"
                android:textColor="@color/colorWhite" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_xem_Ban_Do"
                android:background="@drawable/ic_dieu_huong_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tongTien"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/tong_Tien"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cash"
                android:textSize="20sp"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal"
            android:background="@color/colorGray_31">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/butoncircle"
                    android:layout_gravity="center">
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/ic_phone_24dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Goi"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/butoncircle"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_message_24dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SMS"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/butoncircle"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_clear_24dp"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Huy"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorGray_31">
            <Button
                android:id="@+id/btnDenDiemDon"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:text="ĐẾN ĐIỂM"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorGainsboro"/>
            <Button
                android:id="@+id/btnXacNhanDonKhach"
                android:layout_width="215dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:text="NHẬN HÀNG"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorGreen4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>